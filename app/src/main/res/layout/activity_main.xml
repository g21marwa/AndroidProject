<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_start_flappy_bird"
        android:onClick="startActivityFlappyClicked"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/start_activity_flappy_bird"
        tools:ignore="OnClick,UsingOnClickInXml" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_start_gol"
        android:onClick="startActivityGolClicked"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/main_start_flappy_bird"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/start_activity_gol"
        tools:ignore="OnClickGol,UsingOnClickInXml" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_start_arkanoid"
        android:onClick="startActivityArkanoidClicked"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/main_start_gol"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/start_activity_arkanoid"
        tools:ignore="OnClick,UsingOnClickInXml" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_start_snake"
        android:onClick="startActivitySnakeClicked"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/main_start_arkanoid"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/start_activity_sake"
        tools:ignore="OnClick,UsingOnClickInXml" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_start_hangman"
        android:onClick="startActivityHangmanClicked"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/main_start_snake"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/start_activity_hangman"
        tools:ignore="OnClick,UsingOnClickInXml" />

</androidx.constraintlayout.widget.ConstraintLayout>